{% comment %}
главное меню

пример многоуровнего меню с выпадающими списками
стили каждого уровня навешиваются на menu-node--main_lvl_уровень
эти стили распространяются только на этот уровень и не идут дальше
{% endcomment %}

<div class="sm-hidden xs-hidden">
  <ul class="menu menu--main menu--horizontal">
    {% assign menu_lvl_1 = collections.all.subcollections %}
    {% for link_lvl_1 in menu_lvl_1 %}
      <li class="menu-node menu-node--main_lvl_1">
        {% assign menu_lvl_2 = link_lvl_1.subcollections %}
        
        <a href="{{ link_lvl_1.url }}" class="menu-link">
          {{ link_lvl_1.title }}

          {% if menu_lvl_2.size > 0 %}
            <span class="menu-marker menu-marker--parent">
              <i class="fa fa-caret-down"></i>
            </span>
          {% endif %}
        </a>

        {% if menu_lvl_2.size > 0 %}
          <ul class="menu menu--vertical menu--dropdown">
            {% for link_lvl_2 in menu_lvl_2 %}
              <li class="menu-node menu-node--main_lvl_2">
                <a href="{{ link_lvl_2.url }}" class="menu-link">
                  {{ link_lvl_2.title }}
                </a>

                {% assign menu_lvl_3 = link_lvl_2.subcollections %}
                {% if menu_lvl_3.size > 0 %}
                  <span class="menu-marker menu-marker--parent">
                    <i class="fa fa-angle-right"></i>
                  </span>
                  <ul class="menu menu--side menu--vertical">
                    {% for link_lvl_3 in menu_lvl_3 %}
                      <li class="menu-node menu-node--main_lvl_3">
                        <a href="{{ link_lvl_3.url }}" class="menu-link">
                          {{ link_lvl_3.title }}
                        </a>
                      </li>
                    {% endfor %}
                  </ul>
                {% endif %}
              </li>
            {% endfor %}
          </ul>
        {% endif %}
      </li>
    {% endfor %}
  </ul>
</div>