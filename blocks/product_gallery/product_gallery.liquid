{% comment %}
  галерея
{% endcomment %}
<div class="product-gallery gallery">
  {% comment %}
    основное изображение
  {% endcomment %}
  <div class="product-gallery--no_touch sm-hidden xs-hidden">
    <div class="gallery-large_image">
      <a  href="{{ product.first_image.original_url }}"

          title="{{ product.first_image.title }}"
          alt="{{ product.first_image.title }}"

          rel="right-click: true; selectors-effect: fade;"

          id="MagicZoom"
          class="MagicZoomPlus js-image--large"
      >
        <img  src="{{ product.first_image.large_url }}"

              alt="{{ product.first_image.title }}"
              title="{{ product.first_image.title }}"
        />
      </a>
    </div>

    {% comment %}
      миниатюрки
    {% endcomment %}
    {% if product.images.size > 1 %}
      <div class="slider slider--gallery">
        <div class="slider-control--gallery">
          <div class="slider-left slider-left--gallery js-slider-left">
            <i class="fa fa-chevron-left"></i>
          </div>
          <div class="slider-right slider-right--gallery js-slider-right">
            <i class="fa fa-chevron-right"></i>
          </div>
        </div>

        <ul class="gallery-preview_list gallery-preview_list--horizontal
                  slider-container js-slider--gallery"
        >
          {% for image in product.images %}

            <li class="gallery-preview padded-sides">
              <div class="image-wrapper">
                <a  href="{{ image.original_url }}"

                    alt="{{ image.title }}"
                    title="{{ image.title }}"

                    class="gallery-image
                          {% if forloop.first %} gallery-image--current {% endif %}
                          image-square"

                    rel="zoom-id: MagicZoom"
                    rev="{{ image.large_url }}"

                    _data-large-image="{{ image.large_url }}"
                    _data-original-image="{{ image.original_url }}"
                >
                  <img src="{{ image.compact_url }}" />
                </a>
              </div>
            </li>

          {% endfor %}
        </ul>
      </div>
    {% endif %}
  </div>

  {% comment %}
    галерея для смартфонов
  {% endcomment %}
  {% if product.images.size > 0 %}
    <div class="product-gallery--touch
                slider slider--gallery
                lg-hidden md-hidden"
    >
      {% if product.images.size > 1 %}
        <div class="slider-control--gallery">
          <div class="slider-left slider-left--gallery js-slider-left">
            <i class="fa fa-chevron-left"></i>
          </div>
          <div class="slider-right slider-right--gallery js-slider-right">
            <i class="fa fa-chevron-right"></i>
          </div>
        </div>
      {% endif %}

      <ul class="gallery-preview_list gallery-preview_list--horizontal
                slider-container
                {% if product.images.size > 1 %}js-slider--gallery_touch{% endif %}"
      >
        {% for image in product.images %}

          <li class="gallery-preview padded-sides">
            <div class="image-wrapper">
              <span alt="{{ image.title }}"
                    title="{{ image.title }}"

                    class="gallery-image
                        {% if forloop.first %} gallery-image--current {% endif %}
                        image-square"
                    data-src="{{ image.large_url }}"
                    data-src-retinae="{{ image.original_url }}"
              >
                <img {% if product.images.size > 1 %}
                        class="owl-lazy"
                        data-src="{{ image.large_url }}"
                        data-src-retina="{{ image.original_url }}"
                      {% else %}
                        src="{{ image.large_url }}"
                      {% endif %}
                />
              </span>
            </div>
          </li>

        {% endfor %}
      </ul>
    </div>
  {% endif %}

</div>