{% assign coll = collections.frontpage %}
{% if coll.products.size > 0 %}
  <div class="index_collection">
    <div class="index_collection-title">
      <a href="{{ coll.url }}" title="{{ coll.title }}">
        {{ coll.title | upcase }}
      </a>
    </div>

    <div class="index_collection-product_list
                product_list
                grid-row"
    >
      {% for product in coll.products limit: settings.index_collection_1_count %}
        <div class="lg-grid-3 sm-grid-4 xs-grid-6 mc-grid-12
                    padded"
        >
          {% include "product_preview" %}
        </div>
      {% endfor %}
    </div>
  </div>
{% endif %}

{% comment %}
  возможности слайдера в адаптиве
{% endcomment %}

{% assign slider-products = collections.popular.products %}
{% assign slider-title = collections.popular.title %}
{% assign slider-link = collections.popular.url %}
{% include "slider_product" %}

{% comment %}
  <h1 class="index-title content-title">{{ page.title | editable }}</h1>
{% endcomment %}

<div class="index-content page-content editor">
  {{ page.content | editable }}
</div>
