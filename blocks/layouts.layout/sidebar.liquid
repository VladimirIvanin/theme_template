<div class="sidebar">

  {% if template == 'collection' and collection.subcollections.size > 0 %}
    <div class="sidebar-block">
      <div class="sidebar-block_title">
        Каталог
      </div>
      {% include "menu_collection" %}
    </div>
  {% endif %}

  {% if template == 'collection' and collection.properties.size > 0 %}
    <div class="sidebar_block">
      <div class="sidebar-block_title">
        Фильтр
      </div>
      {% comment %}
      {% include "collection_filter_small" %}
      {% endcomment %}
      {% include "collection_filter" %}
    </div>
  {% endif %}

  {% if template == 'blog' %}
    <div class="sidebar_block">
      <div class="sidebar-block_title">
      </div>
    </div>
  {% endif %}

  {% assign sidebar = block_lists.news.blocks %}
  {% if sidebar.size > 0 %}
    {% for block in sidebar %}
      <div class="sidebar-block">
        <div class="sidebar-block_title">{{ block.title }}</div>
        <div class="sidebar-block_content">
          {{ block.content }}
        </div>
      </div>
    {% endfor %}
  {% endif %}

  <div class="sidebar_block">
    <div class="sidebar-block_title js-recently_view">
    </div>
  </div>

</div>