.body{
  padding: 1em;
}

body .set{
  width: 72%;
}

body .set-sidebar{
  width: 26%;
}

.set-block{
  overflow-x: auto;
}

.wide_set .field-content{
  width: 100% !important;
  float: left;
}

@media all and (max-width: 960px) {
  body .set {
    width: 100%
  }
  body .set-sidebar {
    float: left;
    width: 100%;
  }
  body .set-list-item .description {
    width: 50%;
  }
}

@media all and (max-width: 700px) {
  body .past_step span {
    display: none;
  }
  body .past_step {
    width: 50%;
  }
  body #registered_client {
    float: none;
    border-left: 0;
    padding-left: 0;
    width: 100%;
    border-bottom: 1px solid #ccc;
    padding-bottom: 10px;
    overflow: hidden;
    height: auto;
    margin-bottom: 10px;
  }
  body .field-content {
    width: auto;
    float: none;
  }
}

@media all and (max-width: 470px) {
  body .field-content {
    width: 100%!important;
    clear: both;
  }
  body .field-content textarea {
    width: 97%!important;
  }
  body #create_order {
    margin: 0!important;
  }
  body #regular_client .field-content.small {
    width: 80%!important;
    clear: both;
  }
}